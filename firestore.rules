
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the requesting user is the owner of a document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Any authenticated user can read user profiles (for search, etc.)
      allow get, list: if isSignedIn();

      // A user can only create their own user document
      allow create: if isSignedIn() && isOwner(userId);

      // A user can only update their own document.
      allow update: if isSignedIn() && isOwner(userId);
      
      // A user can delete their own document
      allow delete: if isSignedIn() && isOwner(userId);

      // Rules for the 'friendRequests' subcollection
      match /friendRequests/{friendRequestId} {
        // The recipient of the request can read, update, or delete it
        allow get, list, update, delete: if isSignedIn() && isOwner(userId);
        
        // An authenticated user can create a friend request for another user
        allow create: if isSignedIn() && request.resource.data.recipientId == userId;
      }
    }

    // Rules for the 'chats' collection
    match /chats/{chatId} {
      // A user can get or list chats they are a participant in
      allow get, list: if isSignedIn() && request.auth.uid in resource.data.participantIds;

      // A user can create a chat if they are one of the participants
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participantIds;

      // A user can update a chat if they are a participant (e.g., sending a message)
      allow update: if isSignedIn() && request.auth.uid in resource.data.participantIds;

      // A user can delete a chat if they are a participant
      allow delete: if isSignedIn() && request.auth.uid in resource.data.participantIds;

      // Rules for the 'messages' subcollection within a chat
      match /messages/{messageId} {
        // Chat participants can get and list messages
        allow get, list: if isSignedIn() && get(/databases/$(database)/documents/chats/$(chatId)).data.participantIds.hasAny([request.auth.uid]);

        // A chat participant can create a message if they are the sender
        allow create: if isSignedIn() && get(/databases/$(database)/documents/chats/$(chatId)).data.participantIds.hasAny([request.auth.uid]) && request.resource.data.senderId == request.auth.uid;
        
        // A user can only update their own messages
        allow update: if isSignedIn() && resource.data.senderId == request.auth.uid;

        // Any participant in the chat can delete any message.
        // This is necessary for the "Clear Chat" functionality to work for both users.
        allow delete: if isSignedIn() && get(/databases/$(database)/documents/chats/$(chatId)).data.participantIds.hasAny([request.auth.uid]);
      }
    }
  }
}
